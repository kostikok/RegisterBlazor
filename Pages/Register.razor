@page "/register"
@using werver.Models
@inject IUserService UserService
@inject NavigationManager navManager

<div class="row">
    <div class="col-lg-4 offset-lg-4 pt-4 pb-4 border">
        <div class="mb-3 text-center">
            <h3>Register</h3>
        </div>
        <div class="mb-3">
            <label>Username</label>
            <input @bind="model.Username" class="form-control" placeholder="Username" />
        </div>
        <div class="mb-3">
            <label>Email</label>
            <input @bind="model.Email" type="email" class="form-control" placeholder="Email" />
        </div>
        <div class="mb-3">
            <label>Password</label>
            <input @bind="model.Password" type="password" class="form-control" placeholder="Password" />
        </div>
        <div class="mb-3 d-grid gap-2">
            <button @onclick="RegisterUser" class="btn btn-primary">Register</button>
        </div>
    </div>
</div>

@code {
    private class Model
    {
        public string Username { get; set; }
        public string Email { get; set; }
        public string Password { get; set; }
    }

    private Model model = new Model();

    private async Task RegisterUser()
    {
        var user = new User
            {
                Username = model.Username,
                Email = model.Email,
                PasswordHash = model.Password,
                IsDeleted = false
            };

        await UserService.Create(user);
        navManager.NavigateTo("/login");
    }
}
